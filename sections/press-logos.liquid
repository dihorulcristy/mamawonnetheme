{%- comment -%} Press Logos / "Bekannt aus" Section {%- endcomment -%}

<section class="press-logos section-padding">
  <div class="container">
    <div class="section-heading">
      <h2>{{ section.settings.heading }}</h2>
    </div>

    <div class="press-logos__grid">
      {%- for block in section.blocks -%}
        <div class="press-logos__item" {{ block.shopify_attributes }}>
          {%- if block.settings.logo != blank -%}
            <img src="{{ block.settings.logo | image_url: height: 72 }}" alt="{{ block.settings.name | escape }}" height="36" loading="lazy">
          {%- else -%}
            <span style="font-size:1rem;font-weight:700;color:#aaa;text-transform:uppercase;letter-spacing:0.05em">{{ block.settings.name }}</span>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Bekannt aus",
  "class": "press-logos-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Bekannt aus"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "limit": 8,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo-Bild"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Presse"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bekannt aus",
      "blocks": [
        { "type": "logo", "settings": { "name": "Eltern Magazin" } },
        { "type": "logo", "settings": { "name": "Baby & Familie" } },
        { "type": "logo", "settings": { "name": "Öko-Test" } },
        { "type": "logo", "settings": { "name": "Stiftung Warentest" } }
      ]
    }
  ]
}
{% endschema %}
