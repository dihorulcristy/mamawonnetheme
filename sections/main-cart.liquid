{%- comment -%} Main Cart Page Section {%- endcomment -%}

<section class="cart-page">
  <div class="container">
    <h1>{{ 'cart.title' | t }}</h1>

    {%- if cart.item_count == 0 -%}
      <div class="cart-page__empty">
        <p>{{ 'cart.empty' | t }}</p>
        <a href="/collections/all" class="btn btn--primary" style="margin-top:20px">{{ 'cart.continue_shopping' | t }}</a>
      </div>
    {%- else -%}
      <form action="/cart" method="post">
        {%- for item in cart.items -%}
          <div class="cart-item" style="padding:20px 0;border-bottom:1px solid var(--color-primary)">
            <div style="display:flex;gap:16px;align-items:center">
              <div class="cart-item__image">
                {%- if item.image -%}
                  <img src="{{ item.image | image_url: width: 144 }}" alt="{{ item.title | escape }}" width="72" height="72">
                {%- endif -%}
              </div>
              <div class="cart-item__info" style="flex:1">
                <h3 class="cart-item__title"><a href="{{ item.url }}">{{ item.product.title }}</a></h3>
                {%- unless item.variant.title == 'Default Title' -%}<p style="font-size:0.82rem;color:#999">{{ item.variant.title }}</p>{%- endunless -%}
                <p class="cart-item__price">{{ item.final_line_price | money }}</p>
              </div>
              <div class="quantity-selector">
                <button type="button" class="quantity-selector__btn" data-qty-minus>âˆ’</button>
                <input type="number" name="updates[]" class="quantity-selector__input" value="{{ item.quantity }}" min="0" aria-label="Menge">
                <button type="button" class="quantity-selector__btn" data-qty-plus>+</button>
              </div>
            </div>
          </div>
        {%- endfor -%}

        <div class="cart-footer">
          <div class="cart-drawer__subtotal">
            <span>{{ 'cart.subtotal' | t }}</span>
            <span>{{ cart.total_price | money }}</span>
          </div>
          <p style="font-size:0.82rem;color:#999">{{ 'cart.taxes_note' | t }}. {{ 'cart.shipping_note' | t }}.</p>
          <div style="display:flex;gap:12px">
            <button type="submit" name="update" class="btn btn--secondary">{{ 'cart.update' | t }}</button>
            <button type="submit" name="checkout" class="btn btn--primary">{{ 'cart.checkout' | t }}</button>
          </div>
        </div>
      </form>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Warenkorb-Seite",
  "settings": []
}
{% endschema %}
