{%- comment -%} Hero Section {%- endcomment -%}

<section class="hero">
  <div class="hero__inner">
    <div class="hero__content">
      {%- if section.settings.tagline != blank -%}
        <span class="hero__tagline">{{ section.settings.tagline }}</span>
      {%- endif -%}
      <h1 class="hero__title">{{ section.settings.heading }}</h1>
      <p class="hero__subtitle">{{ section.settings.subheading }}</p>

      <div class="hero__actions">
        {%- if section.settings.cta_text != blank -%}
          <a href="{{ section.settings.cta_link }}" class="btn btn--primary btn--large">
            {{ section.settings.cta_text }}
          </a>
        {%- endif -%}
        {%- if section.settings.cta_secondary_text != blank -%}
          <a href="{{ section.settings.cta_secondary_link }}" class="text-link" style="color:#fff">
            {{ section.settings.cta_secondary_text }}
          </a>
        {%- endif -%}
      </div>

      <div class="hero__trust">
        {%- for block in section.blocks -%}
          <span class="hero__trust-item" {{ block.shopify_attributes }}>
            {{ block.settings.icon }} {{ block.settings.text }}
          </span>
        {%- endfor -%}
      </div>
    </div>

    <div class="hero__image">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
          width="1200"
          height="800"
          loading="eager"
          fetchpriority="high"
        >
      {%- else -%}
        <img
          src="{{ 'hero-image.jpg' | asset_url }}"
          alt="MamaWonne - Mama und Baby"
          width="1200"
          height="800"
          loading="eager"
          fetchpriority="high"
        >
      {%- endif -%}
    </div>
  </div>
</section>

