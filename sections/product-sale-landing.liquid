  /* Urgency bar */
  .sale-urgency-bar { background: var(--sale-red); color: #fff; padding: 10px 0; text-align: center; font-size: 0.9rem; letter-spacing: 0.3px; position: sticky; top: 0; z-index: 100; }
  .sale-urgency-bar .container { display: flex; align-items: center; justify-content: center; gap: 8px; flex-wrap: wrap; }
  .sale-countdown { font-family: monospace; font-size: 1.2rem; font-weight: 800; background: rgba(0,0,0,0.2); padding: 2px 10px; border-radius: 4px; min-width: 85px; text-align: center; }

  /* Section label */
  .sale-section-label { display: block; text-align: center; text-transform: uppercase; letter-spacing: 3px; font-size: 0.75rem; font-weight: 700; color: var(--sale-gold); margin-bottom: 8px; }

  /* Hero */
  .sale-hero { padding: 40px 0; background: #fff; }
  .sale-hero__inner { display: grid; grid-template-columns: 1fr 1fr; gap: 48px; align-items: start; }
  .sale-hero__main-image { border-radius: 16px; overflow: hidden; background: var(--sale-cream); aspect-ratio: 1; }
  .sale-hero__main-image img { width: 100%; height: 100%; object-fit: cover; display: block; }
  .sale-hero__thumbs { display: flex; gap: 8px; margin-top: 12px; }
  .sale-hero__thumb { width: 68px; height: 68px; border-radius: 10px; overflow: hidden; border: 2px solid transparent; cursor: pointer; transition: var(--transition); }
  .sale-hero__thumb.active, .sale-hero__thumb:hover { border-color: var(--sale-gold); }
  .sale-hero__thumb img { width: 100%; height: 100%; object-fit: cover; }
  .sale-hero__title { font-family: var(--font-heading); font-size: 1.7rem; line-height: 1.3; color: var(--color-text); margin: 12px 0; }

  /* Rating */
  .sale-hero__rating { font-size: 0.9rem; color: #666; margin-bottom: 12px; display: flex; align-items: center; gap: 6px; flex-wrap: wrap; }
  .sale-stars { color: #f5a623; letter-spacing: 1px; }
  .sale-stars--large { font-size: 1.5rem; }
  .sale-rating-sep { color: #ddd; }
  .sale-reviews-link { text-decoration: underline; cursor: pointer; }
  .sale-sold-count { color: var(--sale-green); font-weight: 600; }

  /* Badges */
  .sale-badges-row { display: flex; gap: 8px; flex-wrap: wrap; }
  .sale-badge { display: inline-block; padding: 5px 12px; border-radius: 20px; font-size: 0.78rem; font-weight: 700; }
  .sale-badge--hot { background: #fff3cd; color: #856404; }
  .sale-badge--limited { background: #fde8e8; color: var(--sale-red); }
  .sale-badge--save { background: var(--sale-green); color: #fff; }

  /* Pricing */
  .sale-hero__price { margin: 12px 0; display: flex; align-items: center; gap: 12px; flex-wrap: wrap; }
  .sale-price-old { font-size: 1.1rem; color: #999; text-decoration: line-through; }
  .sale-price-current { font-size: 2.2rem; font-weight: 800; color: var(--color-text); }

  /* Stock indicator */
  .sale-stock-indicator { margin: 16px 0; padding: 16px; background: #fff8f0; border: 1px solid #ffe0b2; border-radius: 12px; }
  .sale-stock-bar { height: 6px; background: #f0e6dc; border-radius: 3px; overflow: hidden; margin-bottom: 8px; }
  .sale-stock-bar__fill { height: 100%; background: linear-gradient(90deg, var(--sale-red), #ff8a65); border-radius: 3px; transition: width 1s ease; }
  .sale-stock-text { font-size: 0.85rem; margin: 0; color: var(--color-text); }
  .sale-stock-viewers { color: #999; font-size: 0.8rem; }

  /* Benefits mini */
  .sale-hero__benefits-mini { list-style: none; padding: 0; margin: 16px 0; }
  .sale-hero__benefits-mini li { padding: 5px 0; font-size: 0.92rem; color: var(--color-text); line-height: 1.5; }

  /* Variants */
  .sale-variants { display: flex; gap: 8px; margin-bottom: 16px; flex-wrap: wrap; }
  .sale-variant-option { padding: 10px 20px; border: 2px solid #e0d5c8; border-radius: 10px; cursor: pointer; font-size: 0.9rem; transition: var(--transition); }
  .sale-variant-option.active, .sale-variant-option:hover { border-color: var(--sale-gold); background: var(--color-primary); }
  .sale-variant-option input { display: none; }

  /* CTA Button */
  .sale-cta-btn { display: inline-block; padding: 18px 32px; border-radius: 12px; font-size: 1.15rem; font-weight: 800; text-align: center; text-decoration: none; border: none; cursor: pointer; transition: all 0.3s ease; width: 100%; letter-spacing: 0.5px; }
  .sale-cta-btn--primary { background: var(--sale-green); color: #fff; box-shadow: 0 4px 20px rgba(45,139,78,0.35); }
  .sale-cta-btn--primary:hover { background: #246f3e; transform: translateY(-2px); box-shadow: 0 8px 28px rgba(45,139,78,0.45); }
  .sale-cta-btn--large { font-size: 1.3rem; padding: 22px 40px; }
  .sale-cta-btn:disabled { opacity: 0.5; cursor: not-allowed; animation: none; }
  @keyframes pulseSale { 0%,100% { box-shadow: 0 4px 20px rgba(45,139,78,0.35); } 50% { box-shadow: 0 4px 32px rgba(45,139,78,0.6); } }
  .sale-cta-btn--primary:not(:disabled) { animation: pulseSale 2s infinite; }

  /* Payment icons */
  .sale-payment-icons { font-size: 0.82rem; color: #999; margin-top: 10px; }

  /* Trust strip */
  .sale-hero__trust-strip { display: grid; grid-template-columns: 1fr 1fr; gap: 8px; margin-top: 16px; }
  .sale-trust-item { display: flex; align-items: center; gap: 6px; font-size: 0.82rem; color: #555; padding: 6px 0; }

  /* Problem section */
  .sale-problem { padding: 72px 0; background: var(--color-primary); }
  .sale-problem__grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 24px; margin-top: 40px; }
  .sale-problem__card { background: #fff; padding: 32px 24px; border-radius: 16px; text-align: center; box-shadow: var(--shadow-sm); transition: var(--transition); }
  .sale-problem__card:hover { transform: translateY(-4px); box-shadow: var(--shadow-md); }
  .sale-problem__card--highlight { border: 2px solid var(--sale-red); box-shadow: 0 4px 20px rgba(217,83,79,0.15); }
  .sale-problem__icon { font-size: 2.5rem; margin-bottom: 16px; }
  .sale-problem__card h3 { font-family: var(--font-heading); font-size: 1.15rem; margin-bottom: 12px; }
  .sale-problem__card p { font-size: 0.92rem; color: #555; line-height: 1.65; }

  /* Section titles */
  .sale-section-title { font-family: var(--font-heading); font-size: 2rem; text-align: center; margin-bottom: 8px; color: var(--color-text); line-height: 1.3; }
  .sale-section-subtitle { text-align: center; color: #555; font-size: 1.05rem; margin-bottom: 8px; max-width: 650px; margin-left: auto; margin-right: auto; }

  /* Benefits */
  .sale-benefits { padding: 72px 0; background: #fff; }
  .sale-benefits__grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; margin-top: 40px; }
  .sale-benefit { text-align: center; padding: 28px 20px; border-radius: 16px; background: var(--sale-cream); transition: var(--transition); }
  .sale-benefit:hover { transform: translateY(-4px); box-shadow: var(--shadow-md); }
  .sale-benefit__icon { font-size: 2.5rem; margin-bottom: 12px; }
  .sale-benefit h3 { font-family: var(--font-heading); font-size: 1.05rem; margin-bottom: 8px; }
  .sale-benefit p { font-size: 0.88rem; color: #555; line-height: 1.6; }

  /* How it works */
  .sale-how { padding: 72px 0; background: var(--sale-cream); }
  .sale-how__steps { display: flex; align-items: flex-start; justify-content: center; gap: 16px; margin-top: 40px; }
  .sale-how__step { text-align: center; padding: 28px 20px; flex: 1; max-width: 280px; }
  .sale-how__number { width: 56px; height: 56px; border-radius: 50%; background: var(--color-secondary); color: #fff; font-size: 1.5rem; font-weight: 700; display: flex; align-items: center; justify-content: center; margin: 0 auto 16px; }
  .sale-how__step h3 { font-family: var(--font-heading); font-size: 1.1rem; margin-bottom: 8px; }
  .sale-how__step p { font-size: 0.88rem; color: #555; line-height: 1.6; }
  .sale-how__connector { font-size: 2rem; color: var(--sale-gold); padding-top: 40px; font-weight: 300; }

  /* Reviews */
  .sale-reviews { padding: 72px 0; background: #fff; }
  .sale-reviews__summary { display: flex; gap: 40px; align-items: center; justify-content: center; margin: 32px auto; max-width: 600px; padding: 24px; background: var(--sale-cream); border-radius: 16px; }
  .sale-reviews__score { text-align: center; min-width: 120px; }
  .sale-reviews__big-num { display: block; font-size: 3rem; font-weight: 800; color: var(--color-text); line-height: 1; }
  .sale-reviews__score > span:last-child { font-size: 0.75rem; color: #999; }
  .sale-reviews__bars { flex: 1; }
  .sale-bar-row { display: flex; align-items: center; gap: 8px; margin: 3px 0; font-size: 0.75rem; color: #999; }
  .sale-bar { flex: 1; height: 8px; background: #eee; border-radius: 4px; overflow: hidden; }
  .sale-bar__fill { height: 100%; background: #f5a623; border-radius: 4px; }
  .sale-reviews__grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px; margin-top: 24px; }
  .sale-review-card { background: var(--sale-cream); padding: 24px; border-radius: 16px; border-left: 4px solid var(--sale-gold); }
  .sale-review-card__header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px; }
  .sale-review-card__verified { font-size: 0.75rem; color: var(--sale-green); font-weight: 600; }
  .sale-review-card h4 { font-family: var(--font-heading); font-size: 1rem; margin-bottom: 8px; color: var(--color-text); }
  .sale-review-card p { font-size: 0.88rem; line-height: 1.65; color: #555; font-style: italic; margin-bottom: 12px; }
  .sale-review-card__author { font-size: 0.82rem; color: #666; }
  .sale-review-card__author strong { color: var(--color-text); }

  /* Mid CTA */
  .sale-mid-cta { padding: 72px 0; background: linear-gradient(135deg, var(--color-secondary) 0%, var(--sale-gold) 100%); }
  .sale-mid-cta__inner { text-align: center; max-width: 600px; margin: 0 auto; }
  .sale-mid-cta__badge { display: inline-block; background: rgba(255,255,255,0.2); color: #fff; padding: 6px 16px; border-radius: 20px; font-size: 0.8rem; font-weight: 700; margin-bottom: 16px; }
  .sale-mid-cta__inner h2 { color: #fff; font-family: var(--font-heading); font-size: 1.8rem; margin-bottom: 8px; line-height: 1.3; }
  .sale-mid-cta__inner > p { color: rgba(255,255,255,0.9); margin-bottom: 24px; font-size: 1.05rem; }
  .sale-mid-cta .sale-cta-btn { max-width: 420px; margin: 0 auto; display: block; }
  .sale-mid-cta__guarantee { color: rgba(255,255,255,0.9); font-size: 0.88rem; margin-top: 16px; font-weight: 600; }

  /* Guarantee */
  .sale-guarantee { padding: 64px 0; background: #f0fdf4; border-top: 3px solid var(--sale-green); border-bottom: 3px solid var(--sale-green); }
  .sale-guarantee__inner { display: flex; gap: 32px; align-items: center; max-width: 750px; margin: 0 auto; }
  .sale-guarantee__icon { font-size: 4rem; flex-shrink: 0; }
  .sale-guarantee__content h2 { font-family: var(--font-heading); font-size: 1.5rem; margin-bottom: 12px; color: var(--sale-green); }
  .sale-guarantee__content p { font-size: 0.95rem; line-height: 1.7; color: #333; margin-bottom: 16px; }
  .sale-guarantee__badges { display: flex; gap: 16px; flex-wrap: wrap; font-size: 0.85rem; font-weight: 600; color: var(--sale-green); }

  /* Gallery */
  .sale-gallery { padding: 64px 0; background: var(--sale-cream); }
  .sale-gallery__grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 12px; margin-top: 32px; }
  .sale-gallery__item { border-radius: 12px; overflow: hidden; aspect-ratio: 1; }
  .sale-gallery__item img { width: 100%; height: 100%; object-fit: cover; display: block; transition: transform 0.4s ease; }
  .sale-gallery__item:hover img { transform: scale(1.05); }

  /* FAQ */
  .sale-faq { padding: 72px 0; background: #fff; }
  .sale-faq__list { max-width: 700px; margin: 32px auto 0; }
  .sale-faq__item { border-bottom: 1px solid #e8e0d8; }
  .sale-faq__item summary { padding: 20px 0; font-weight: 600; font-size: 1rem; cursor: pointer; color: var(--color-text); list-style: none; display: flex; justify-content: space-between; align-items: center; }
  .sale-faq__item summary::after { content: '+'; font-size: 1.5rem; color: var(--sale-gold); transition: var(--transition); font-weight: 300; }
  .sale-faq__item[open] summary::after { content: 'âˆ’'; }
  .sale-faq__item summary::-webkit-details-marker { display: none; }
  .sale-faq__item p { padding: 0 0 20px; font-size: 0.92rem; line-height: 1.7; color: #555; }

  /* Final CTA */
  .sale-final-cta { padding: 72px 0; background: var(--color-primary); }
  .sale-final-cta__inner { display: grid; grid-template-columns: 1fr 1fr; gap: 48px; align-items: center; max-width: 900px; margin: 0 auto; }
  .sale-final-cta__product { border-radius: 16px; overflow: hidden; }
  .sale-final-cta__product img { width: 100%; height: auto; display: block; }
  .sale-final-cta__content h2 { font-family: var(--font-heading); font-size: 1.4rem; margin-bottom: 4px; }

  /* Sticky mobile CTA */
  .sale-sticky-cta { display: none; position: fixed; bottom: 0; left: 0; right: 0; background: #fff; padding: 10px 16px; box-shadow: 0 -4px 20px rgba(0,0,0,0.12); z-index: 999; }
  .sale-sticky-cta__inner { display: flex; align-items: center; gap: 12px; max-width: 500px; margin: 0 auto; }
  .sale-sticky-cta__left { flex-shrink: 0; text-align: center; }
  .sale-sticky-cta .sale-cta-btn { padding: 14px 20px; font-size: 1rem; animation: none; flex: 1; }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    .sale-hero__inner { grid-template-columns: 1fr; gap: 24px; }
    .sale-hero__title { font-size: 1.4rem; }
    .sale-price-current { font-size: 1.8rem; }
    .sale-problem__grid { grid-template-columns: 1fr; gap: 16px; }
    .sale-benefits__grid { grid-template-columns: 1fr; gap: 12px; }
    .sale-how__steps { flex-direction: column; align-items: center; }
    .sale-how__connector { transform: rotate(90deg); padding: 0; }
    .sale-reviews__summary { flex-direction: column; gap: 16px; }
    .sale-reviews__grid { grid-template-columns: 1fr; }
    .sale-gallery__grid { grid-template-columns: repeat(2, 1fr); }
    .sale-guarantee__inner { flex-direction: column; text-align: center; }
    .sale-guarantee__badges { justify-content: center; }
    .sale-final-cta__inner { grid-template-columns: 1fr; gap: 24px; text-align: center; }
    .sale-section-title { font-size: 1.5rem; }
    .sale-mid-cta__inner h2 { font-size: 1.3rem; }
    .sale-sticky-cta { display: block; }
    .sale-final-cta { padding-bottom: 100px; }
    .mobile-bottom-nav { display: none !important; }
    .sale-hero__trust-strip { grid-template-columns: 1fr 1fr; }
  }
</style>

<script>
  /* Countdown Timer â€” daily reset at midnight */
  (function() {
    var el = document.getElementById('sale-countdown');
    if (!el) return;
    function update() {
      var now = new Date();
      var end = new Date(now);
      end.setHours(23,59,59,999);
      var diff = end - now;
      if (diff <= 0) { el.textContent = '00:00:00'; return; }
      var h = Math.floor(diff / 3600000);
      var m = Math.floor((diff % 3600000) / 60000);
      var s = Math.floor((diff % 60000) / 1000);
      el.textContent = (h < 10 ? '0' : '') + h + ':' + (m < 10 ? '0' : '') + m + ':' + (s < 10 ? '0' : '') + s;
    }
    update();
    setInterval(update, 1000);
  })();

  /* Thumbnail gallery */
  document.querySelectorAll('.sale-hero__thumb').forEach(function(thumb) {
    thumb.addEventListener('click', function() {
      var main = document.querySelector('#sale-main-img img');
      if (main && this.dataset.full) {
        main.src = this.dataset.full;
      }
      document.querySelectorAll('.sale-hero__thumb').forEach(function(t) { t.classList.remove('active'); });
      this.classList.add('active');
    });
  });

  /* Variant selection */
  document.querySelectorAll('.sale-variant-option').forEach(function(opt) {
    opt.addEventListener('click', function() {
      document.querySelectorAll('.sale-variant-option').forEach(function(o) { o.classList.remove('active'); });
      this.classList.add('active');
    });
  });

  /* Random viewers count fluctuation */
  (function() {
    var viewerEl = document.querySelector('.sale-stock-viewers');
    if (!viewerEl) return;
    setInterval(function() {
      var base = {{ section.settings.viewers_count }};
      var rand = base + Math.floor(Math.random() * 5) - 2;
      if (rand < 1) rand = base;
      viewerEl.textContent = rand + ' Personen sehen sich dieses Produkt gerade an';
    }, 8000);
  })();
</script>

