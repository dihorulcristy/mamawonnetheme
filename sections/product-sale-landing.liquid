    },
    {
      "type": "range",
      "id": "sold_count",
      "min": 100,
      "max": 9900,
      "step": 100,
      "label": "Anzahl verkauft",
      "default": 2400
    },
    {
      "type": "range",
      "id": "viewers_count",
      "min": 5,
      "max": 50,
      "step": 1,
      "label": "Aktuelle Besucher",
      "default": 14
    }
  ]
}
{% endschema %}
