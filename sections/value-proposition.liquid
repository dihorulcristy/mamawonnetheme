{%- comment -%} Value Proposition / USP Section {%- endcomment -%}

<section class="value-proposition section-padding">
  <div class="container">
    <div class="section-heading">
      <h2>{{ section.settings.heading }}</h2>
    </div>

    <div class="usp-grid">
      {%- for block in section.blocks -%}
        <div class="usp-card" {{ block.shopify_attributes }}>
          <span class="usp-card__icon">{{ block.settings.icon }}</span>
          <h3 class="usp-card__title">{{ block.settings.title }}</h3>
          <p class="usp-card__text">{{ block.settings.text }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

